﻿@model CarDealership.Models.Queries.VehicleSearchParameters

<div class="row">
    <div class="panel panel-body text-center search-panel">
        <div class="col-xs-12 col-md-4">
            <div class="form-group form-inline">
                <label>Quick Search</label>
                @Html.EditorFor(m => m.SearchTerm, new { htmlAttributes = new { @class = "form-control", placeholder = "Make, model, or year" } })
                @Html.ValidationMessageFor(m => m.SearchTerm, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-xs-12 col-md-4">
            <div class="form-group form-inline">
                <label>Price</label>
                @Html.DropDownListFor(m => m.MinPrice, Model.PriceList, "No Min", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MinPrice, "", new { @class = "text-danger" })
                @Html.DropDownListFor(m => m.MaxPrice, Model.PriceList, "No Max", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaxPrice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-xs-12 col-md-4">
            <div class="form-group form-inline">
                <label>Year</label>
                @Html.DropDownListFor(m => m.MinYear,
                    new SelectList(Enumerable.Range(2000, (int)DateTime.Now.Year + 1 - 2000).ToList()),
                    "No Min",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MinYear, "", new { @class = "text-danger" })
                @Html.DropDownListFor(m => m.MaxYear,
                    new SelectList(Enumerable.Range(2000, (int)DateTime.Now.Year + 1 - 2000).ToList()),
                    "No Max",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaxYear, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-xs-12 col-md-4 col-md-offset-4">
            <input id="search-btn" value="Search" class="btn btn-custom" />
        </div>
    </div>
</div>

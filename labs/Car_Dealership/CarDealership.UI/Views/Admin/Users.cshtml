@model List<CarDealership.UI.Models.UserAdminViewModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

@Html.ActionLink("Add a new User", "AddUser")

<div>
    @if (Model == null)
    {
        <p>Error</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Last Name</td>
                    <td>First Name</td>
                    <td>Email</td>
                    <td>Role</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@Html.ActionLink("Edit", "EditUser", new { id = user.User.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@model CarDealership.UI.Models.UserReportViewModel

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

@Html.ActionLink("Add a new User", "AddUser")

<div>
    @if (Model == null)
    {
        <p>Error</p>
    }
    else
    {
        <table class="table table-striped table-hover" id="user-table">
            <thead>
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.LastName</td>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@Html.ActionLink("Edit", "EditUser", new { id = user.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@model CarDealership.UI.Models.MakeAddViewModel

@{
    ViewBag.Title = "Makes";
}

<h2>Makes</h2>

<div class="row">
    <div class="panel panel-body text-center search-panel">
        <div class="col-xs-12 col-md-6">
            @using (Html.BeginForm())
            {
                <div class="form-group form-inline">
                    @Html.LabelFor(m => m.NewMakeName, "New Make")
                    @Html.EditorFor(m => m.NewMakeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a new make" } })
                    <input id="make-save-btn" type="submit" value="Save" class="btn btn-custom" />
                </div>
                @Html.ValidationMessageFor(m => m.NewMakeName, "", new { @class = "text-danger" })
            }
        </div>
    </div>
</div>

<div class="row">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Make</th>
                <th>Date Added</th>
                <th>User</th>
            </tr>
        </thead>
        @foreach (var row in Model.MakeUserTable)
        {
            <tr>
                <td>@row.Make</td>
                <td>@row.DateAdded</td>
                <td>@row.User</td>
            </tr>
        }
    </table>
</div>
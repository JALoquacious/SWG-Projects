@model CarDealership.UI.Models.ModelAddViewModel

@{
    ViewBag.Title = "Models";
}

<h2>Models</h2>

@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="row">
    <div class="panel panel-body text-center search-panel">
        @using (Html.BeginForm())
            {
            <div class="col-xs-12 col-md-6">
                <div class="form-group form-inline">
                    @Html.LabelFor(m => m.NewModelName, "New Model")
                    @Html.EditorFor(m => m.NewModelName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a new model" } })
                    <input id="model-save-btn" type="submit" value="Save" class="btn btn-custom" />
                    @*@Html.ValidationMessageFor(m => m.NewModelName, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="form-group form-inline">
                    @Html.LabelFor(m => m.Make.MakeId, "Make")
                    @Html.DropDownListFor(m => m.Make.MakeId, Model.Makes, "- Select -", new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(m => m.Make.MakeId, "", new { @class = "text-danger" })*@
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Date Added</th>
                <th>User</th>
            </tr>
        </thead>
        @foreach (var row in Model.ModelUserTable)
        {
            <tr>
                <td>@row.Make</td>
                <td>@row.Model</td>
                <td>@row.DateAdded</td>
                <td>@row.User</td>
            </tr>
        }
    </table>
</div>

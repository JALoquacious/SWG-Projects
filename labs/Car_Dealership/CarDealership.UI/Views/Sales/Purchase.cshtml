@model CarDealership.UI.Models.PurchaseAddViewModel
@{
    ViewBag.Title = "Purchase Vehicle";
}

<h2>Purchase Vehicle</h2>

<div class="panel panel-darkslategray">
    <div class="panel-heading">@Model.VehicleDetail.Year  @Model.VehicleDetail.Make  @Model.VehicleDetail.Model</div>
    <div class="row">
        <div class="col-xs-12 col-md-3">
            <img class="featured-img" src="@Url.Content("~/Images/Vehicles/" + Model.VehicleDetail.Image)" />
        </div>
        <div class="col-xs-12 col-md-3">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="strong">Body Style:</td>
                        <td>@Model.VehicleDetail.BodyStyle</td>
                    </tr>
                    <tr>
                        <td class="strong">Trans:</td>
                        <td>
                            @if (Model.VehicleDetail.IsAutomatic)
                            {
                                <text>Automatic</text>
                            }
                            else
                            {
                                <text>Manual</text>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="strong">Color:</td>
                        <td>@Model.VehicleDetail.ExteriorColor</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-md-3">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="strong">Interior:</td>
                        <td>@Model.VehicleDetail.InteriorColor</td>
                    </tr>
                    <tr>
                        <td class="strong">Mileage:</td>
                        <td>
                            @if (Model.VehicleDetail.Mileage > 1000m)
                            {
                                @Model.VehicleDetail.Mileage
                            }
                            else
                            {
                                <text>New</text>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="strong">VIN:</td>
                        <td>@Model.VehicleDetail.VIN</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-md-3">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="strong">Sale Price:</td>
                        <td>@Model.VehicleDetail.SalePrice</td>
                    </tr>
                    <tr>
                        <td class="strong">MSRP:</td>
                        <td>@Model.VehicleDetail.MSRP</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="hidden-xs col-md-3"></div>
        <div class="col-xs-12 col-md-9">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td class="strong">Description:</td>
                        <td>@Model.VehicleDetail.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<h2>Sales Information</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Customer.UserId)
    @Html.HiddenFor(m => m.Sale.UserId)
    @Html.HiddenFor(m => m.VehicleDetail.VehicleId)
    @Html.HiddenFor(m => m.VehicleDetail.MSRP)
    @Html.HiddenFor(m => m.VehicleDetail.SalePrice)
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Name)
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", placeholder = "ex: Jane Doe" })
            @Html.ValidationMessageFor(m => m.Customer.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Phone)
            @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control", placeholder = "ex: 888-123-4567" })
            @Html.ValidationMessageFor(m => m.Customer.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Email)
            @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control", placeholder = "ex: you@email.com" })
            @Html.ValidationMessageFor(m => m.Customer.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Street1, "Street 1")
            @Html.TextBoxFor(m => m.Customer.Street1, new { @class = "form-control", placeholder = "ex: 123 Main St." })
            @Html.ValidationMessageFor(m => m.Customer.Street1, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Street2, "Street 2")
            @Html.TextBoxFor(m => m.Customer.Street2, new { @class = "form-control", placeholder = "Apt. 4A" })
            @Html.ValidationMessageFor(m => m.Customer.Street2, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.City)
            @Html.TextBoxFor(m => m.Customer.City, new { @class = "form-control", placeholder = "ex: Akron" })
            @Html.ValidationMessageFor(m => m.Customer.City, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.State, "State")
            @Html.DropDownListFor(m => m.Customer.State, Model.States, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.State, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Customer.Zip)
            @Html.TextBoxFor(m => m.Customer.Zip, new { @class = "form-control", placeholder = "ex: 12345" })
            @Html.ValidationMessageFor(m => m.Customer.Zip, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Sale.PurchasePrice, "Purchase Price")
            @Html.TextBoxFor(m => m.Sale.PurchasePrice, new { @class = "form-control", placeholder = "ex: 20000" })
            @Html.ValidationMessageFor(m => m.Sale.PurchasePrice, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-xs-12 col-md-6">
            @Html.LabelFor(m => m.Sale.PaymentTypeId, "Payment Type")
            @Html.DropDownListFor(m => m.Sale.PaymentTypeId, Model.PaymentTypes, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Sale.PaymentTypeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-custom" id="purchase-save">Save</button>
}
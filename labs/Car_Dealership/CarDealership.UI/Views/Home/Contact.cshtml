@model CarDealership.Models.Tables.Contact

@{
    ViewBag.Title = "Contact Us";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-xs-12 col-md-6">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "ex: Jane Doe" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ex: you@email.com" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "ex: 888-123-4567" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message)
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your message here"})
            </div>
            <button type="submit" class="btn btn-primary" id="contact-submit">Submit</button>
            <p>This is the VIN NUMBER: @Request.QueryString["VIN"]</p>
        }
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="embed-responsive embed-responsive-4by3">
            <iframe width="600"
                    height="450"
                    frameborder="0" style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCg6e9o6OVHAiDTws68oqzSmukB9xLVvLs&q=Space+Needle,Seattle+WA">
            </iframe>
        </div>
        <p class="strong">400 Broad St</p>
        <p class="strong">Seattle, WA 98109</p><br />
        <p class="strong">Sales: 111-111-1111</p>
        <p class="strong">Service: 111-111-2222</p>
    </div>
</div>
@model IEnumerable<CarDealership.Models.Queries.VehicleFeatured>
@{
    ViewBag.Title = "Home Page";
}
<a href="@Url.Action("Specials")">
    <div id="main-carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#main-carousel" data-slide-to="1"></li>
            <li data-target="#main-carousel" data-slide-to="2"></li>
            <li data-target="#main-carousel" data-slide-to="3"></li>
            <li data-target="#main-carousel" data-slide-to="4"></li>
            <li data-target="#main-carousel" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="~/Images/banner1.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Superior motorcars</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="~/Images/banner2.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Exemplary service</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="~/Images/banner3.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Only the finest in automobiles</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="fourth-slide" src="~/Images/banner4.jpg" alt="Fourth slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Huge selection</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="fifth-slide" src="~/Images/banner5.jpg" alt="Fifth slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Dedicated and helpful staff</h1>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="sixth-slide" src="~/Images/banner6.jpg" alt="Sixth slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-shadow">Drive away in your dream ride today!</h1>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</a>

<div class="row">
    <hr />
    <h2>Featured Vehicles</h2>
    <div>
        @foreach (var vehicle in Model)
        {
            <a href="@Url.Action("Details", "Inventory", new { id = vehicle.VehicleId })">
                <div class="col-xs-12 col-md-4 featured-div">
                    <p><img class="featured-img" src="@Url.Content("~/Images/Vehicles/" + vehicle.Image)" /></p>
                    <p>@vehicle.Year @vehicle.Make @vehicle.Model</p>
                    <p>@vehicle.SalePrice.ToString("c")</p>
                </div>
            </a>
        }
    </div>
</div>